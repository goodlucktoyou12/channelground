extends layouts/main
include mixins/videoBlock
include mixins/noticeListItem
block content
    .friend_search
       form(action=routes.search, method="get")
                input(type="text", placeholder="영상검색", name="term")
    .home-gap
    .home-videos
            each item in videos 
                +videoBlock({
                    id:item.id,
                    title:item.title,
                    views:item.views,
                    videoFile:item.fileUrl
                })