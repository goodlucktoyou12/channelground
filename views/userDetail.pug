extends layouts/main
include mixins/videoBlock

block content
    .user-profile
        .user_information
            .user_content
                img.user-avatar(src=`/${user.avatarUrl}`)
                h4.profile__username=user.name
                h4.user__descriptions=user.description
        .user_gap
        .user-videos
            each item in user.videos 
                +videoBlock({
                    id:item.id,
                    title:item.title,
                    views:item.views,
                    videoFile:item.fileUrl
                })